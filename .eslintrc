{
	"extends": ["airbnb", "prettier", "prettier/react"],
	"plugins": ["prettier", "jsx-a11y"],
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"jsx-a11y/anchor-is-valid": [
			"error",
			{
				"components": ["Link"],
				"specialLink": ["hrefLeft", "hrefRight"],
				"aspects": ["noHref", "invalidHref", "preferButton"]
			}
		]
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	}
}
